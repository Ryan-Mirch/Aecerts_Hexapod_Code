script/source = "@tool
extends Control


@export var itemName = \"Item Name\"
@export var pageToOpen: Pages.PageNames
@export var hovered:bool = false

@onready var itemLabel = %\"Name Label\"
@onready var underline = %Underline

# Called when the node enters the scene tree for the first time.
func _ready():
	if hovered: hover()
	else: unhover()
	print(pageToOpen)


# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(delta):
	itemLabel.text = itemName
	if Engine.is_editor_hint():
		if hovered: hover()
		else: unhover()
	
	
func select():
	get_tree().call_group(\"Page\",\"close\")
	Pages.pageDict[pageToOpen].open()
	
func hover():
	underline.visible = true
	
func unhover():
	underline.visible = false
"

